{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build Project",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": {
                "pattern": { "regexp": "error" }
            },
            "group": {
                "isDefault": true,
                "kind": "build"
            }
        }
    ]
}